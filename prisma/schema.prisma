generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Resource {
  id              String                 @id @default(uuid())
  title           String
  description     String?
  uploaderId      String?
  fileUrl         String
  status          String                 @default("PENDING")
  createdAt       DateTime               @default(now())
  courseName      String?
  courseYear      Int?
  linkedRequestId String?
  program         String?
  resourceType    String
  school          String?
  tags            String[]
  yearOfCreation  Int?
  embedding       Unsupported("vector")?
  email           String?
  user            User?                  @relation(fields: [uploaderId], references: [id])

  @@index([embedding])
}

model Request {
  id               String   @id @default(uuid())
  queryText        String
  requesterId      String?
  status           String   @default("PENDING")
  createdAt        DateTime @default(now())
  courseName       String
  courseYear       Int
  program          String?
  resourceType     String
  school           String
  tags             String[]
  fulfillUploadURL String?
  email            String[]
}

model User {
  id                    String     @id @default(uuid())
  email                 String     @unique
  role                  String     @default("MEMBER")
  createdAt             DateTime   @default(now())
  graduatingYear        Int?
  program               String?
  school                String?
  username              String     @unique
  yearOfStudy           Int?
  bio                   String?
  profilePicture        String?
  profileVisibility     String     @default("PUBLIC")
  showContributionScore Boolean    @default(true)
  showEmail             Boolean    @default(false)
  showGraduationYear    Boolean    @default(true)
  showResourceCount     Boolean    @default(true)
  showSchoolInfo        Boolean    @default(true)
  socialLinks           String[]   @default([])
  authId                String?    @unique
  resources             Resource[]
  provider              String?
}
