generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Resource {
  id              String                 @id @default(uuid())
  title           String
  description     String?
  uploaderId      String?
  fileUrl         String
  status          String                 @default("PENDING")
  createdAt       DateTime               @default(now())
  courseName      String?
  courseYear      Int?
  linkedRequestId String?
  program         String?
  resourceType    String
  school          String?
  tags            String[]
  yearOfCreation  Int?
  embedding       Unsupported("vector")?
  user            User?                  @relation(fields: [uploaderId], references: [id])

  @@index([embedding])
}

model Request {
  id               String   @id @default(uuid())
  queryText        String
  requesterId      String?
  status           String   @default("PENDING")
  createdAt        DateTime @default(now())
  courseName       String
  courseYear       Int
  email            String[]
  program          String?
  resourceType     String
  school           String
  tags             String[]
  fulfillUploadURL String?
}

model User {
  id             String     @id @default(uuid())
  email          String     @unique
  password       String
  role           String     @default("MEMBER")
  createdAt      DateTime   @default(now())
  graduatingYear Int?
  program        String?
  school         String?
  username       String     @unique
  yearOfStudy    Int?
  resources      Resource[]

  profileVisibility     String     @default("PUBLIC") // PUBLIC, PRIVATE, SCHOOL_ONLY
  showEmail             Boolean    @default(false)
  showSchoolInfo        Boolean    @default(true)
  showGraduationYear    Boolean    @default(true)
  showResourceCount     Boolean    @default(true)
  showContributionScore Boolean    @default(true)
  
  // Additional profile fields
  bio                   String?
  profilePicture        String?
  socialLinks           String[]   @default([])
}
